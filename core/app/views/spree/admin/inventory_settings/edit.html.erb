<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:inventory_settings) %>
<% end %>

<%= form_tag admin_inventory_settings_path, :method => :put do %>

  <div data-hook="show_zero_stock" class="field">
    <%= hidden_field_tag 'preferences[show_zero_stock_products]', '0' %>
    <%= check_box_tag('preferences[show_zero_stock_products]', "1", Spree::Config[:show_zero_stock_products]) %>
    <%= t(:show_out_of_stock_products) %>
  </div>
  
  <div data-hook="allow_backorders"  class="field">
    <%= hidden_field_tag 'preferences[allow_backorders]', '0' %>
    <%= check_box_tag('preferences[allow_backorders]', "1", Spree::Config[:allow_backorders]) %>
    <%= t(:allow_backorders) %>
  </div>

  <div class="form-buttons" data-hook="buttons">
    <%= button t(:update), 'icon-refresh' %>
  </div>

<% end %>
